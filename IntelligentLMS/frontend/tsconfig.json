{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
