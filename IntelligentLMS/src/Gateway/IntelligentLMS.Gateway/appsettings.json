{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "super_secret_key_for_intelligent_lms_dev_12345",
    "Issuer": "intelligent-lms",
    "Audience": "intelligent-lms"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{remainder}"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/users/{**remainder}"
        }
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/courses/{**remainder}"
        }
      },
      "progress-route": {
        "ClusterId": "progress-cluster",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/progress/{**remainder}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "progress-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  }
}